        "def calculate_total_price(price, tax_rate):\n",
        "    \"\"\"消費税を加えた合計金額を計算する関数\"\"\"\n",
        "    total_price = price + (price * tax_rate)\n",
        "    return total_price\n",
        "\n",
        "# 使用例\n",
        "item_price = 1000  # 商品の金額\n",
        "tax_rate = 0.10    # 消費税率（10%）\n",
        "\n",
        "total = calculate_total_price(item_price, tax_rate)\n",
        "print(total)"
      ]
